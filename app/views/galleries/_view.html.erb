<div class="cauVL gallery">
  <div class="cauVLpic view"></div>
  <div class="thumbMain flexcroll" style="<%= "height: 90px;" if edit %>">
    <ul class="thumb thumbnails">
		  <% gallery.items.each_with_index do |item, index|
			  options = {}		
			  options[:class] = 'current' if index == 0		
			  options['data-kind'] = item.kind
			  if item.is_video?
				  options['data-video_id'] = item.video_id
			  elsif item.is_photo?
				  options['data-url'] = item.image.url(:normal)
			  end
		  %>
			  <li class="<%=item.kind%>" data-item-id="<%=item.id%>">
			      <div style="height: 63px;">
				  <%= image_tag item.thumbnail_url, options %>
				  </div>
				  <% if edit %>
				  <div>
					  <%=move_before_button item.id%>
			          <%=delete_item_button item.id%>
			          <%=move_after_button item.id%>
				  </div>
				  <% end %>
			  </li>			
		  <% end %>
    </ul>
  </div>
</div>
