                <h2 class="bodyHead <%=if @section == :home_index then 'bodyHead2' end%>"><%=_("Volunteer")%></h2>
                <p class="bodytxtR <%=if @section == :home_index then 'bodytxtR2' end%>"><%= raw(_("%s at Bivo and help us -- and the charities we support -- grow.") % link_to(_("Volunteer your time"), static_page(:volunteer))) %></p>

