<% content_for(:js) do %>
  $(function() {
    $('#language').change(function() {
      $('#nav_form').submit();
    });
	});
<% end %>

<div id="user_nav">
  	<%= link_to _("Home"), root_path %> | 
	<%= link_to _("Vote Causes"), causes_url %> | 
	<%= link_to _("Dashboard"), dashboard_url %> | 
	<%= link_to _("About Bivo"), about_url %> | 
    <% if user_signed_in? %>
      <%= _("Signed in as") %> <%= current_user.email %> |
          <% if (current_user.type == "Charity") %>
            <%= link_to _("Settings"), edit_user_registration_path %>
          <% elsif (current_user.type == "PersonalUser") %>
            <%= link_to _("Settings"), edit_user_registration_path %>
          <% elsif (current_user.type == "Admin") %>
            <%= link_to _("Admin Tools"), admin_tools_path %>
          <% end %>
		| <%= link_to _("Logout"), destroy_user_session_path %>
    <% else %>
	  <%= link_to _("Login"), new_user_session_path %>
    <% end %>
    | <%= _('Language:') %>
  	<%= form_tag(change_language_path, :method => "get", :id => "nav_form", :class => "inline") do %>
    	<%= select_tag :language, options_for_select(languages.collect { |l| [l.name, l.id] }, language.id ) %>
  	<% end %>
</div>
