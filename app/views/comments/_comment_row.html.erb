
<div id="<%="row_" + comment.id.to_s%>" class="comment_row">
  <div>
    <span>
       <b><%=_("by")%></b> <%=owner_of(comment)%> <b><%=_("on")%></b> <%= l comment.created_at, :format => :short %>
    </span>
    <br/>
    <span id="comment_body_<%=comment.id%>">
      <%=raw nl2br(comment.body)%>
    </span>
    <%= render(:partial => 'comments/edit_form', :locals => {:comment => comment, :entity =>entity})%>
    <br/>
      <%=reply_comment_button comment.id, entity%>
      <%=edit_comment_button comment.id, entity, comment.body%>
      <%=delete_comment_button comment.id, entity%>

 </div>
  <% children(comment).each do |c| %>
    <ul>
    <%= render(:partial => 'comments/comment_row', :locals => {:comment => c, :entity => entity})%>
    </ul>
  <% end %>
   <ul><div class="add_form_container"> </div></ul>
</div>

