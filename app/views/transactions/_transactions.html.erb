<%= will_paginate @transactions %>

<div id="transactions-list">
  <table border="1" frame="border">
  <thead>
    <tr>
       <th><%= _("Type") %></th>
       <th><%= _("Date") %></th>
	     <th><%= _("Description") %></th>
       <th><%= _("Category") %></th>
       <th><%= _("Detail") %></th>
       <th>&nbsp;</th>
       <th>&nbsp;</th>
    </tr>
  </thead>
  <% for transaction in @transactions %>
    <tr>
       <td><%= transaction.type %></td>
       <td><%= transaction.transaction_date %></td>
	     <td><%= transaction.description %></td>
       <% if transaction.type == "Income"  %>
          <td><%= (IncomeCategory.find(transaction.income_category_id)).name %></td>
       <% else  %>
          <td><%= (ExpenseCategory.find(transaction.expense_category_id)).name %></td>
       <% end  %>
       <td><%= transaction.detail %></td>
       <td><%= link_to _("Edit"),transaction_edit_path(transaction.id)%></td>
       <td><%= link_to _("Destroy"), transaction_destroy_path(transaction.id), :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
  </table>
</div>

