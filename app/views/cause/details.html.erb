<p>
    <b>Name:</b>
    <%= @cause.name %>
</p>
<p>
    <b>Title:</b>
    <%= @cause.url %>
</p>
<p>
    <b>Content:</b>
    <%= @cause.description %>
</p>
<p>
    <b>City:</b>
    <%= @cause.city %>
</p>
<p>
    <b>Founds Needed:</b>
    <%= @cause.funds_needed %>
</p>
<p>
    <b><%=_("Status") %>:</b>
    ( <%= @cause.funds_raised/@cause.funds_needed %>% Complete)
</p>
<div id="vote_div">
    <% form_remote_tag :url => {:action => 'vote'}, :update => "vote_div", :position => :bottom , :html => {:cause_id => @cause.id} do %>
    <%= submit_tag 'VOTE!' %>
    <%= end %>
</div>
