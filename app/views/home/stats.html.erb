<h1>Statistics</h1>

<div id="filters">
  <%= render 'choose_period' %>
</div>


<div>
  <h2><%= _("Expenses Details")%></h2>

  <table border="1"> 
	<tr>
		<th>Type</th>
		<th>Description</th>
		<th>Paid to</th>
		<th>Amount</th>
	</tr>
	<% for expense in @expenses %>
		<td><%= expense.expense_category.name %></td>
		<td><%= expense.description %></td>
		<td><%= expense.paid_to %></td>
		<td><%= expense.amount %></td>
	<% end %>
  </table>
</div>