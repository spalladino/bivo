<%= large_single_block _('Terms and conditions') do %>

<p class="default_font">
<%= _("As you login from facebook the first time, you should accept the terms and conditions of Bivo") %>
</p>

<div class="default_font">
  <%= render :partial => "static_pages/eula-#{I18n.locale}" %>
</div>

<br/>
<div>
<%= form_tag confirm_eula_path do %>
