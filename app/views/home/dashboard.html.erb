

<div class="inbodyM">
	<div class="bodyInner">
    	<div class="statGrT"><h2><%=_("Dashboard")%></h2></div>
        <div class="boxMain">


        <%= render 'choose_period' %>

            <br class="spacer" />

            <div class="dashBoxL">

            	<div class="dashBoxLBox"><span class="dashBoxLNo"><%= number_to_currency(@funds_raised,:precision => 0) %></span><span class="dashBoxLTxt"><%=_("funds raised")%></span></div>

               <div class="dashBoxLBox"><span class="dashBoxLNo"><%=number_with_delimiter  @transactions %></span><span class="dashBoxLTxt"><%=_("transactions")%></span></div>
               <div class="dashBoxLBox"><span class="dashBoxLNo"><%=number_with_delimiter  @fully_funded_causes %></span><span class="dashBoxLTxt"><%=_("fully funded causes")%></span></div>
            </div>

        	<div class="dashBoxR">
	
				<div class="dashBoxRin">
				  <h3><%=_("Causes currently raising funds")%></h3>
				  <% if @causes_raising_funds.empty? %><p class="clickTxt"><%= _("No causes to display") %></p><% end %>
				  <div class="boxRIn">
				    <% @causes_raising_funds.each do |cause| %>
						<%= render :partial => 'cause_card', :locals => { :cause => cause } %>
				    <% end %>
				    <br class="spacer" />
				  </div>
				</div>
	
            	<div class="dashBoxRin">
                	<h3><%= _("Fundraising Sources") %></h3>
                    <div class="cloud">

  <% @shops_to_cloud.each do |shop| %>
    <%= link_to(shop.display_name, shop_path(shop.id), :style => "font-size:#{shop.font_size}px;") %>
  <% end %>
           <br class="spacer" />

                    </div>
                </div>



                <div class="dashBoxRin">
                  <h3><%=_("Causes funded")%></h3>
                  <% if @causes_being_funded.empty? %><p class="clickTxt"><%= _("No causes in the current period") %></p><% end %>
                  <div class="boxRIn">
                    <% @causes_being_funded.each do |cause| %>
						<%= render :partial => 'cause_card', :locals => { :cause => cause } %>
                    <% end %>
                    <br class="spacer" />
                  </div>
                </div>


                <div class="dashBoxRin">
                	<h3><%=_("Most voted causes queued for funding")%></h3>
                  <% if @most_voted_causes.empty? %><p class="clickTxt"><%= _("No causes in the current period") %></p><% end %>

                  <div class="boxRIn">

                  <% @most_voted_causes.each do |cause| %>
                      <div class="boxHu">
                        	<h3><%=cause.cause_category.name%></h3>
                            <p class="boxHuTxt boxHuTxt2"><%= link_to_cause cause %></p>

                            <p class="ghanaTxt"><%= number_to_currency(cause.funds_needed,:precision => 0)%></p>
                            <p class="ghanaTxt2"><%=_("to be raised")%></p>
                        </div>
                    <%end%>
                    <br class="spacer" />
                    </div>
                </div>

            </div><br class="spacer" />

        </div>

     </div>
	 <div class="bodyBot"></div>
</div>

