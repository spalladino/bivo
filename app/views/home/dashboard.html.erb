

<div class="inbodyM">
	<div class="bodyInner">
    	<div class="statGrT"><h2>Dashboard</h2></div>
        <div class="boxMain">


        <%= render 'choose_period' %>

            <br class="spacer" />

            <div class="dashBoxL">

            	<div class="dashBoxLBox"><span class="dashBoxLNo"><%= number_to_currency(@funds_raised,:precision => 0) %></span><span class="dashBoxLTxt">funds raised</span></div>

               <div class="dashBoxLBox"><span class="dashBoxLNo"><%=number_with_delimiter  @transactions %></span><span class="dashBoxLTxt">transactions</span></div>
               <div class="dashBoxLBox"><span class="dashBoxLNo"><%=number_with_delimiter  @fully_funded_causes %></span><span class="dashBoxLTxt">fully funded causes</span></div>
            </div>

        	<div class="dashBoxR">
            	<div class="dashBoxRin">
                	<h3><%= _("Fundraising Sources") %></h3>
                    <div class="cloud">

  <% @shops_to_cloud.each do |shop| %>
    <%var = shop.incomes_in_period_rank @from, @to%>
    <%= link_to(shop.display_name, shop_path(shop.id),:class => var) %>

  <% end %>
           <br class="spacer" />

                    </div>
                </div>


                <div class="dashBoxRin">
                  <h3>Causes being funded</h3>
                  <%= _("No causes with votes in the current period") if @causes_being_funded.empty? %>
                  <div class="boxRIn">
                    <% @causes_being_funded.each do |cause| %>
                    	<div class="boxHu">
                        	<h3><%= cause.cause_category.name %></h3>
                           <p class="boxHuTxt"><%= cause.name %></p>
                           <div class="loadMain">
                             <img src="images/loader.jpg" width="138" height="20" alt="" class="load" /><p class="loadTxt"><%= cause.funds_raised_in_period.to_i/cause.funds_needed*100 %>% of <%= cause.funds_needed %></p>
                           </div>
                      </div>
                    <% end %>
                    <br class="spacer" />
                  </div>

                </div>


                <div class="dashBoxRin">
                	<h3>Most voted causes queued for funding</h3>
                  <%= _("No causes in the current period") if @most_voted_causes.empty? %>
                  <div class="boxRIn">

                  <% @most_voted_causes.each do |cause| %>
                      <div class="boxHu">
                        	<h3><%=cause.cause_category.name%></h3>
                            <p class="boxHuTxt boxHuTxt2"><%=cause.name%></p>

                            <p class="ghanaTxt"><%=cause.funds_needed%></p>
                            <p class="ghanaTxt2">to be raised</p>
                        </div>
                    <%end%>
                    <br class="spacer" />
                    </div>
                </div>

            </div><br class="spacer" />

        </div>

     </div>
	 <div class="bodyBot"></div>
</div>

