<%= styled_will_paginate @shops, :class => "pegi shops" %>

<% searBox = "searBox" %>
<% searBoxMid = "searBoxMid" %>

<%if @is_shop_list%>

<% searBox = "" %>
<% searBoxMid = "" %>

<%end%>
<div id="shop-list">
  <div class="shop shopListBox <%= searBox%>">
    <% if @shops.any? %>
      <% for shop in @shops %>
		      <div class="shopListBoxL"><%= link_to(image_tag(shop.search_url))%></div>
		      <div class="shopListBoxMid <%= searBoxMid%>">
			      <h3><%= link_to shop.display_name, shop_details_path(shop.short_url) %></h3>
			      <%= link_to "Website: #{shop.url}", to_absolute_url(shop.url), :class => "shopListlink" %>
			      <p><%= shop.description %></p>
		      </div>
		      <div class="shopListBoxRi">
			      <div class="shopListGr"><a href="<%= shop_details_path(shop.short_url) %>"><span class="statInBoxNo chariRiBoxNo"><%= comission_value_text(shop)%></span><span class="shopListGrTxt"><%= (_("of your purchase will be%sdonated") % '<br/>').html_safe %></span></a></div>
			      <div class="buttonMainFloat">
				      <div class="buttonSide accBtnSt"></div>
			        <%= shop_at_link shop, :class => "buttonMid accBtnMi"%>
				      <div class="buttonSide accBtnEn"></div><br class="spacer" />
			      </div>
			      <!--<input type="button" name="shopAmazon" value="Shop at Amazon" id="shopAmazon" class="addBtn shopBtn" />-->
		      </div>
		      <br class="spacer" />
      <% end %>
    <% else %>
      <p class="clickTxt"><%= _('No shops have been found.') %></p>
    <% end %>
  </div>
</div>

