<% content_for(:head) do %>
	<%= javascript_include_tag "pagination" %>
<% end %>

<% title "Shops" %>

<%= link_to "New Shop", new_shop_path %> <br /> <br />

<%=_("Shops count")%> <%=@count%>
<div id="filters">
	<%= form_tag shops_path, :method => :get, :id => "filter_form" do %>
				<%= _("Show per page")%>
        <%= hidden_field_tag('category_field', "5") %>
				<%= select_tag :per_page, options_from_collection_for_select(@page_sizes, 'to_i', 'to_s', @per_page)%>
		<p>
			<%= submit_tag _('Search'), :disable_with => _('Searching...') %>
		</p>
	<% end %>
</div>


<h2>Shops</h2>

<div id="shops">
  <%= render 'shops' %>
</div>

