


  <!-- Purchase button: -->
  <%if @shop.redirection == :purchase_button%>
  <div class="buttonMainLog">
    <div class="logBtnSt"></div>
    <a href= "<%=@shop.affiliate_code %>" class="buttonMidlog"> <%=_('Go to ')%> <%=@shop.name %></a>
    <div class="logBtnEn"></div><br class="spacer">
  </div>
  <%end%>

  <!-- Search box: -->
  <%if @shop.redirection == :search_box%>
  <form action="<%= @shop.affiliate_code %>" onsubmit="return replaceSearch(this)">
    <input type="text" class="banLFill2"/>
      <div class="buttonMainLog">
        <div class="logBtnSt"></div>
        <%= submit_tag _('Search at ')+@shop.name.capitalize, :class=>"buttonMidlog"%>
        <div class="logBtnEn"></div><br class="spacer">
      </div>
    </form>
  <%end%>

  <!-- Custom widget: -->
  <%if @shop.redirection == :custom_widget%><%=raw @shop.affiliate_code%><%end%>

