<%  single_block _("Change your password") do %>

<%= bivo_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= render "shared/error_messages", :target => resource %>
  <%= f.hidden_field :reset_password_token %>

  <%= f.label :password,_("Password") %>
  <%= f.password_field :password %>

  <%= f.label :password_confirmation, ("Password Confirmation")  %>
  <%= f.password_field :password_confirmation %>

  <%= f.submit _("Change my password") %>
<% end %>

<% end %>