<%  single_block _("Forgot your password?") do |s| %>
  <%= bivo_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
    <%= render "shared/error_messages", :target => resource %>

    <%= f.label :email,_("Email: ") %>
	<%= f.text_field :email,:title=>_('Email :')%>
  <br/>
	<%= f.submit _("Send me reset password instructions") %>

  <br/>  <br/>
  <%=back_button(_("Cancel"))%>

  <% end %>
  <div class="bodyBot"></div>
<% end %>

