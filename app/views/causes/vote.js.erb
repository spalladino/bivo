
$("#vote_btn").html("<%= escape_javascript(vote_button(@cause)) %>");
$("#vote_counter").text('<%=@cause.reload.votes_count%>');

<% if flash[:notice]%>
	$.jGrowl("<%= flash[:notice] %>", <%= options_for_javascript(flash[:notice_options] || {}) %>);
<% end %>

<% if flash[:alert]%>
	$.jGrowl("<%= flash[:alert] %>", <%= options_for_javascript(flash[:alert_options] || {}) %>);
<% end %>

