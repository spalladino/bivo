<p>
    <b>Name:</b>
    <%= @cause.name %>
</p>
<p>
    <b>Title:</b>
    <%= @cause.url %>
</p>
<p>
    <b>Content:</b>
    <%= @cause.description %>
</p>
<p>
    <b><%=s_('Cause|City') %></b>
    <%= @cause.city %>
</p>
<p>
    <b>Founds Needed:</b>
    <%= @cause.funds_needed %>
</p>
<p>
    <b><%=_("Status") %>:</b>
    ( <%= @cause.funds_raised/@cause.funds_needed %>% Complete)
</p>

<%= form_tag 'vote', :remote => true  do %>
  <%= hidden_field_tag "cause_id", @cause.id %>
  <div><%= submit_tag "VOTE", :id => "submit_btn", :onclick => '$(this).val("Voting...");$(this).attr("disabled", "true");return true;'%></div>
<% end %>

