<p>
    <b>Name:</b>
    <%= @cause.name %>
</p>
<p>
    <b>Title:</b>
    <%= @cause.url %>
</p>
<p>
    <b>Content:</b>
    <%= @cause.description %>
</p>
<p>
    <b><%=s_('Cause|City') %></b>
    <%= @cause.city %>
</p>
<p>
    <b>Founds Needed:</b>
    <%= @cause.funds_needed %>
</p>
<p>
    <b><%=_("Status") %>:</b>
    ( <%= @cause.funds_raised/@cause.funds_needed*100 %> % Complete)
</p>

<div id="vote_btn">
  <%= vote_button @cause %>
</div>

<p>Votes Count:</p>
<p id = "vote_counter"> <%=@cause.votes_count%> </p>

<div id="follow_btn">
  <%= follow_button @cause %>
</div>

<%if current_user && (@cause.charity.id == current_user.id || current_user.is_admin_user) %>

  <div id="delete_button">
    <%= delete_button @cause %>
  </div>

  <div id="active_deactive_button">
    <%= active_deactive_button @cause %>
  </div>

  <div id="mark_as_paid_button">
    <%= mark_as_paid_button @cause %>
  </div>


<%end%>

