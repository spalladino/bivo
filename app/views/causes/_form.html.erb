<%= form_for @cause do |f|%>

  <%= render "shared/error_messages", :target => @cause %>

  <br/>  <br/>

  <%= render :partial => @partial_cause_edit, :locals => { :f => f }  %>

  <table>
	  <tr>
		  <td>
			  <%= f.label _('Country')%>
		  </td>
		  <td>
			  <%= f.label _('City')%>
		  </td>
	  </tr>
	  <tr>
		  <td>
			  <%= collection_select('cause', 'country_id', Country.all, :id, :name) %>
		  </td>
		  <td>
			  <%= f.text_field :city %>
		  </td>
	  </tr>
  </table>

  <%= f.label _('Description') %><br/>
  <%= f.text_area :description, :id => "wysiwyg", :rows=>"5", :cols=>"47"%>
  <br/>

  <%= f.submit 'Save' %> &nbsp;
  <%= tag 'input', {:type => 'button', :value => _('Cancel'), :onclick => "javascript:window.location = '#{root_path}';"} %>
  <% end %>
  <% content_for :js do %> <!-- javascript code to run, for this view only -->
    <%= render :partial => 'shared/check_url', :locals => {
      :is_new => @cause.new_record?, :url_was => @cause.url_was, :url_check => '/cause/check_url'
    } %>
  <%end%>

